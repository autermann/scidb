
--setup
--start-query-logging
create empty array A <a:int32, b:string> [x=0:2,3,3]
--aql select * into A from build(<a:int32> [x=0:2,3,3],x),build(<b:string> [x=0:2,3,3],x)

--test
--error --code=scidb::SCIDB_SE_INFER_SCHEMA::SCIDB_LE_OP_WINDOW_ERROR1 "window(A,0,sum(a))"
--error --code=scidb::SCIDB_SE_INFER_SCHEMA::SCIDB_LE_OP_WINDOW_ERROR1 "window(A,-5,avg(b),count(*))"
--error --code=scidb::SCIDB_SE_SYNTAX::SCIDB_LE_ATTRIBUTE_NOT_EXIST "window(A,1,sum(A))"
--error --code=scidb::SCIDB_SE_SYNTAX::SCIDB_LE_ATTRIBUTE_NOT_EXIST "window(A,1,sum(x))"
--error --code=scidb::SCIDB_SE_TYPE::SCIDB_LE_AGGREGATE_DOESNT_SUPPORT_ASTERISK "window(A,1,avg(a),max(*),count(*))"
--error --code=scidb::SCIDB_SE_QPROC::SCIDB_LE_AGGREGATE_NOT_FOUND "window(A,1,test_aggr(b))"
--error --code=scidb::SCIDB_SE_SYNTAX::SCIDB_LE_ATTRIBUTE_NOT_EXIST "window(A,1,test_aggr(x))"
--error --code=scidb::SCIDB_SE_SYNTAX::SCIDB_LE_UNEXPECTED_OPERATOR_IN_EXPRESSION  "window(A,sum(a))"
--error --code=scidb::SCIDB_SE_INTERNAL::SCIDB_LE_WRONG_OPERATOR_ARGUMENT2 "window(A,2,2,stdev(b))"
--error --code=scidb::SCIDB_SE_SYNTAX::SCIDB_LE_WRONG_OPERATOR_ARGUMENTS_COUNT2 "window(count(A))"
--error --code=scidb::SCIDB_SE_QPROC::SCIDB_LE_ARRAY_DOESNT_EXIST "window(count(b))"

--cleanup
remove(A)
--stop-query-logging
