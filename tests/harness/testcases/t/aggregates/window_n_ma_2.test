--setup
--start-query-logging
create empty array A <a:int32 null,b:double null> [x=0:7,3,2]
create array T1 <a:int32> [x=0:7,3,2]
create array T2 <b:double> [x=0:7,3,2]
store(build_sparse(T1,x+10,x<>2 and x<>5),T1)
store(build_sparse(T2,x+12.2,x<>2 and x<>5),T2)
store(filter(join(T1,T2),1),A)

--test
--aql update A set a=null, b=null where x=0
window(A,1,sum(a))
window(A,1,max(a))
window(A,1,min(a))
window(A,1,avg(a))
window(A,1,count(a))
window(A,1,count(*))
window(A,1,stdev(a))
window(A,1,var(a))

store(build_sparse(T1,x-10,x<>2 and x<>5),T1)
store(build_sparse(T2,x-12,x<>2 and x<>5),T2)
store(filter(join(T1,T2),1),A)
--aql update A set a=null where x=0
window(A,18,sum(a),max(a))
window(A,3,max(a),var(a),stdev(a),count(a),sum(a),min(a))
window(A,4,min(a),count(*))
window(A,1,avg(a),count(a))
window(A,2,count(a),count(*))
window(A,3,count(*),sum(a))
window(A,5,stdev(a),avg(a))
window(A,9,var(a),stdev(a))

window(A,1,sum(b))
window(A,1,max(b))
window(A,1,min(b))
window(A,1,avg(b))
window(A,1,count(b))
window(A,1,count(*))
window(A,1,stdev(b))
window(A,1,var(b))

store(build_sparse(T1,x+10,x<>2 and x<>5),T1)
store(build_sparse(T2,x+12,x<>2 and x<>5),T2)
store(filter(join(T1,T2),1),A)
--aql update A set b=null where x=0
window(A,18,sum(b),max(b))
window(A,3,max(a),var(b),stdev(a),count(a),sum(b),min(a))
window(A,4,min(a),count(*))
window(A,1,avg(a),count(b))
window(A,2,count(b),count(*))
window(A,3,count(*),sum(a))
window(A,5,stdev(a),avg(b))
window(A,9,var(b),stdev(a))

--cleanup
remove(A)
remove(T1)
remove(T2)
--stop-query-logging
