--setup
--start-query-logging
create array A <a:float,b:int32> [x=-3:7,3,2,y=0:2,3,2]
create array T1 <a:float> [x=-3:7,3,2,y=0:2,3,2]
create array T2 <b:int32> [x=-3:7,3,2,y=0:2,3,2]
store(build_sparse(T1,x+10.6+y,x<>2 and x<>5),T1)
store(build_sparse(T2,x+12+y,x<>2 and x<>5),T2)
store(join(T1,T2),A)

--test
window(A,1,1,sum(a))
window(A,1,1,max(a))
window(A,1,1,min(a))
window(A,1,1,avg(a))
window(A,1,1,count(a))
window(A,1,1,count(*))
window(A,1,1,stdev(a))
window(A,1,1,var(a))

store(build_sparse(T1,x-10,x<>2 and x<>5),T1)
store(build_sparse(T2,x-12,x<>2 and x<>5),T2)
store(join(T1,T2),A)
window(A,18,6,sum(a),max(a))
window(A,3,4,max(a),var(a),stdev(a),count(a),sum(a),min(a))
window(A,4,7,min(a),count(*))
window(A,1,3,avg(a),count(a))
window(A,2,7,count(a),count(*))
window(A,3,9,count(*),sum(a))
window(A,5,4,stdev(a),avg(a))
window(A,9,2,var(a),stdev(a))

window(A,1,1,sum(b))
window(A,1,1,max(b))
window(A,1,1,min(b))
window(A,1,1,avg(b))
window(A,1,1,count(b))
window(A,1,1,count(*))
window(A,1,1,stdev(b))
window(A,1,1,var(b))

store(build_sparse(T1,x+10,x<>2 and x<>5),T1)
store(build_sparse(T2,x+12,x<>2 and x<>5),T2)
store(join(T1,T2),A)
window(A,18,2,sum(b),max(b))
window(A,3,6,max(a),var(b),stdev(a),count(a),sum(b),min(a))
window(A,4,3,min(a),count(*))
window(A,1,8,avg(a),count(b))
window(A,2,7,count(b),count(*))
window(A,3,4,count(*),sum(a))
window(A,5,9,stdev(a),avg(b))
window(A,9,3,var(b),stdev(a))

--cleanup
remove(A)
remove(T1)
remove(T2)
--stop-query-logging
