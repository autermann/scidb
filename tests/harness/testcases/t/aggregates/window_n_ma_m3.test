--setup
--start-query-logging
create empty array A <a:string null,b:int32 null> [x=-2:8,5,0,y=0:2,3,1]
create array T1 <a:string> [x=-2:8,5,0,y=0:2,3,1]
create array T2 <b:int32> [x=-2:8,5,0,y=0:2,3,1]
store(build_sparse(T1,x+10*y,x<>2 and x<>5),T1)
store(build_sparse(T2,x+12*y,x<>2 and x<>5),T2)
store(filter(join(T1,T2),1),A)

--test
--aql update A set a=null, b=null where x=0 and y=0
window(A,1,1,sum(a))
window(A,1,1,max(a))
window(A,1,1,min(a))
window(A,1,1,count(a))
window(A,1,1,count(*))

store(build_sparse(T1,x-10,x<>2 and x<>5),T1)
store(build_sparse(T2,x-12,x<>2 and x<>5),T2)
store(filter(join(T1,T2),1),A)
--aql update A set a=null where x=0
window(A,18,2,sum(a),max(a))
window(A,3,4,max(a),count(a),sum(a),min(a))
window(A,4,3,min(a),count(*))
window(A,2,6,count(a),count(*))
window(A,3,7,count(*),sum(a))

window(A,1,1,sum(b))
window(A,1,1,max(b))
window(A,1,1,min(b))
window(A,1,1,avg(b))
window(A,1,1,count(b))
window(A,1,1,count(*))
window(A,1,1,stdev(b))
window(A,1,1,var(b))

store(build_sparse(T1,x+10,x<>2 and x<>5),T1)
store(build_sparse(T2,x+12,x<>2 and x<>5),T2)
store(filter(join(T1,T2),1),A)
--aql update A set b=null where y=0
window(A,18,6,sum(b),max(b))
window(A,3,4,max(a),var(b),count(a),sum(b),min(a))
window(A,4,3,min(a),count(*))
window(A,1,7,count(a),count(b))
window(A,2,8,count(b),count(*))
window(A,3,5,count(*),sum(a))
window(A,5,9,min(a),avg(b))
window(A,9,1,var(b),max(a))

--cleanup
remove(A)
remove(T1)
remove(T2)
--stop-query-logging
