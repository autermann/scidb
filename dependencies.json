                "libboost-system1.38.0": "(>=${targetver})",
                "libboost-regex1.38.0": "(>=${targetver})",
                "libboost-filesystem1.38.0": "(>=${targetver})",
                "libboost-thread1.38.0": "(>=${targetver})",
                "libprotobuf3": "(>=${targetver})"
            },            
            "*":
            {
                "libboost-program-options1.40.0": "(>=${targetver})",
                "libboost-serialization1.40.0": "(>=${targetver})",
                "libboost-system1.40.0": "(>=${targetver})",
                "libboost-regex1.40.0": "(>=${targetver})",
                "libboost-filesystem1.40.0": "(>=${targetver})",
                "libboost-thread1.40.0": "(>=${targetver})",
                "libprotobuf5": "(>=${targetver})"
            }
        }
    },

    "libscidbclient-dbg": { "#": { "libscidbclient": "(>=${scidbver})" } },

    "libscidbclient_python":
    {
        "#": { "libscidbclient": "(>=${scidbver})" },
        "python": "(>=${targetver})"
    },

    "libscidbclient_python-dbg": { "#": { "libscidbclient_python": "(>=${scidbver})" } }
