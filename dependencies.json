                "libboost-filesystem1.42.0": "(>=${targetver})",
                "libboost-thread1.42.0": "(>=${targetver})",
                "libprotobuf6": "(>=${targetver})"
            },
            "10.04":
            {
                "libboost-program-options1.40.0": "(>=${targetver})",
                "libboost-serialization1.40.0": "(>=${targetver})",
                "libboost-system1.40.0": "(>=${targetver})",
                "libboost-regex1.40.0": "(>=${targetver})",
                "libboost-filesystem1.40.0": "(>=${targetver})",
                "libboost-thread1.40.0": "(>=${targetver})",
                "libprotobuf5": "(>=${targetver})"
            },            
            "9.10":
